{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "inlineSourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "strict": true,
        "lib": ["es7"],
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    }
}
